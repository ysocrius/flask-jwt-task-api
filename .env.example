# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/primetrade_db
# For SQLite (development): DATABASE_URL=sqlite:///primetrade.db

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-here-min-256-bits-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRES=900  # 15 minutes in seconds

# Flask Configuration
FLASK_ENV=development
FLASK_APP=src/backend/app.py
SECRET_KEY=your-flask-secret-key-change-this-in-production
DEBUG=True

# CORS Configuration (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:5500

# Optional: Redis for caching
# REDIS_URL=redis://localhost:6379/0

# Optional: Logging
# LOG_LEVEL=INFO
